<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="154.0" prefWidth="161.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.esiee.javafxtest.HelloController">

    <!-- Nouveau Label pour indiquer "Nom :" -->
    <Label style="-fx-font-size: 12px;" text="Nom :" />

    <!-- Champ de saisie pour entrer le nom -->
    <TextField fx:id="tf_inputName" promptText="Entrez votre nom ici" />

    <!-- Label pour afficher les messages -->
    <Label fx:id="l_welcomeText" style="-fx-font-size: 14px;" text="Bienvenue !" />

    <!-- Bouton pour valider -->
    <Button onAction="#onHelloButtonClick" text="Valider" />

</VBox>
